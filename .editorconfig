root = true

[{*.{cr,md,yml,editorconfig},LICENSE,Procfile*,.env*,.crystal-version}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true

[*.md]
indent_size = unset
max_line_length = unset
trim_trailing_whitespace = false

[{.git,bin,lib,tmp}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_style = unset
indent_size = unset
max_line_length = unset
trim_trailing_whitespace = unset
